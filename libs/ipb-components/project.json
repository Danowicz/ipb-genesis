{
  "name": "ipb-components",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "library",
  "sourceRoot": "libs/ipb-components/src",
  "prefix": "ipb",
  "targets": {
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "libs/ipb-components/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": [
          "libs/ipb-components/**/*.ts",
          "libs/ipb-components/**/*.html"
        ]
      }
    },
    "storybook": {
      "executor": "@storybook/angular:start-storybook",
      "options": {
        "port": 4400,
        "configDir": "libs/ipb-components/.storybook",
        "browserTarget": "ipb-components:build-storybook",
        "compodoc": true,
        "compodocArgs": ["-e", "json", "-d", "libs/ipb-components"]
      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    },
    "build-storybook": {
      "executor": "@storybook/angular:build-storybook",
      "outputs": ["{options.outputDir}"],
      "options": {
        "styles": [
            "libs/ipb-components/src/lib/styles/main.scss"
        ],
        "outputDir": "dist/storybook/ipb-components",
        "configDir": "libs/ipb-components/.storybook",
        "browserTarget": "ipb-components:build-storybook",
        "compodoc": true,
        "compodocArgs": ["-e", "json", "-d", "libs/ipb-components"],
        "stylePreprocessorOptions": {
            "includePaths": ["libs/ipb-components/src/lib/styles"]
        }

      },
      "configurations": {
        "ci": {
          "quiet": true
        }
      }
    }
  },
  "tags": []
}
